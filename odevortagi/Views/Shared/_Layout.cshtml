@using System.Security.Claims
<!DOCTYPE html>
<html>
<style>
    .colums {
        border-style: solid;
        border-color: white;
        background-color: rgb(244, 244, 244);
        height: 8em;

    }

    .numericInput {
        border: 1px solid #c0c0c0;
        height: 3em;
        width: 7em;
        font-size: 12px;
        line-height: 2px;
        padding: 5px;
        border-radius: 2px;
        -webkit-box-shadow: inset 0 1px 2px rgba(0, 0, 0, 0.1);
        box-shadow: inset 0 1px 2px rgba(0, 0, 0, 0.1);
    }
</style>

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description"
        content="Ödevi olan insanları hocalarla buluşturmak , bir konuda yeterince bilgi sahibi olan insanların becerilerini değerlendirmek">
    <title>Ödev Ortağım</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.4/dist/jquery.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="site.css">
    <link rel="stylesheet" href="img">

</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light" style="background-color:rgb(86,61,124)">
            <a class="navbar-brand text-white" href="#">Ödev Ortağım</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="nav-link text-white" href="#">Home <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="#">Link</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle text-white" href="#" id="navbarDropdown" role="button"
                            data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Dropdown
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item " asp-controller="Teacher" asp-action="Index">Teachers</a>
                            <a class="dropdown-item " asp-controller="Student" asp-action="Index">Exams</a>

                        </div>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link disabled text-white text-success" href="#">Founder Of Burhan Çavdaroğlu</a>
                    </li>
                </ul>
                    @if (User.Identity.IsAuthenticated)
                    { 
                        
                        <form method="POST" asp-controller="Login" asp-action="Logout">
                            <input  class="btn btn-danger my-2 mx-2" type="submit" value="Logout"/>
                        </form>
                    }
                    else
                    {
                    <a class="nav-link text-white" asp-controller="Login" asp-action="In">Sign-in</a>
                    <a class="nav-link text-white" asp-controller="Login" asp-action="Up">Sign-up</a>
                    }
               
                <form method="GET" class="form-inline my-2 my-lg-0">
                    <input name="explore" class="form-control mr-sm-2" type="search"
                        placeholder="Kelime veya ilan no adı giriniz" aria-label="Search">
                    <button class="btn btn-outline-success my-2 my-sm-0" type="subm it">Search</button>
                </form>
            </div>
        </nav>
    </header>
    @RenderBody()

</body>

</html>